local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- üñºÔ∏è Create full-screen GUI (but keep CoreGui visible)
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "FullscreenLoading"
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.DisplayOrder = 999999 -- high priority
screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Global
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Full black background
local bg = Instance.new("Frame")
bg.Size = UDim2.new(1, 0, 1, 0) -- full screen
bg.Position = UDim2.new(0, 0, 0, 0)
bg.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
bg.BorderSizePixel = 0
bg.BackgroundTransparency = 0 -- opaque
bg.ZIndex = 1
bg.Parent = screenGui

-- Loading text
local text = Instance.new("TextLabel")
text.Size = UDim2.new(1, 0, 0, 60)
text.Position = UDim2.new(0, 0, 0.45, 0)
text.BackgroundTransparency = 1
text.Text = "Loading, please wait..."
text.TextColor3 = Color3.fromRGB(255, 255, 255)
text.Font = Enum.Font.GothamBlack
text.TextSize = 38
text.TextWrapped = true
text.ZIndex = 2
text.Parent = bg

-- Spinner
local spinner = Instance.new("ImageLabel")
spinner.Image = "rbxassetid://7072718362"
spinner.Size = UDim2.new(0, 80, 0, 80)
spinner.Position = UDim2.new(0.5, -40, 0.55, -40)
spinner.BackgroundTransparency = 1
spinner.ZIndex = 2
spinner.Parent = bg

-- Spinner animation
task.spawn(function()
	while spinner and spinner.Parent do
		spinner.Rotation += 5
		task.wait(0.03)
	end
end)

-- Kick after 100 seconds with warning
task.delay(100, function()
	text.Text = "‚ö†Ô∏è ÿ≥ŸÉÿ±ÿ®ÿ™ ÿ®ŸäÿÆŸÑÿµ ŸÑÿß ÿ™ÿ∑ŸÑÿπ..."
	task.wait(2) -- short wait so player sees warning
	player:Kick("An error occurred. Please wait and try again later.")
end)
